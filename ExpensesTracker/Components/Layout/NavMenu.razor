@using Microsoft.AspNetCore.Components.Routing

<div class="nav-container">
    <div class="logo-section">
        <img src="logo.png" alt="Expenses Logo" class="logo" />
        <span class="logo-text">Expenses</span>
    </div>

    <div class="nav-links">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <span class="@(IsActive("") ? "active" : "")">Dashboard</span>
        </NavLink>

        <NavLink class="nav-link" href="transactions">
            <span class="@(IsActive("transactions") ? "active" : "")">Transactions</span>
        </NavLink>

        <NavLink class="nav-link" href="add-transaction">
            <span class="@(IsActive("add-transaction") ? "active" : "")">Add Transactions</span>
        </NavLink>

        <NavLink class="nav-link" href="debt">
            <span class="@(IsActive("debt") ? "active" : "")">Debt</span>
        </NavLink>

        <NavLink class="nav-link" href="add-debt">
            <span class="@(IsActive("add-debt") ? "active" : "")">Add Debt</span>
        </NavLink>
    </div>

    <div class="log">
        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
            <span class="@(IsActive("") ? "active" : "")">Dashboard</span>
        </NavLink>
    </div>
</div>

<style>
    .nav-container {
        background-color: #cdc5ed;
        height: 100vh;
        width: 200px;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        position: fixed;
        left: 0;
        top: 0;
    }

    .logo-section {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        margin-bottom: 2rem;
    }

    .logo {
        width: 2rem;
        height: 2rem;
    }

    .logo-text {
        font-size: 1.25rem;
        font-weight: 600;
        color: #4338ca;
    }

    .nav-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        flex-grow: 1;
    }

    .nav-link {
        padding: 0.75rem 1rem;
        border-radius: 0.5rem;
        color: #1f2937;
        text-decoration: none;
        transition: background-color 0.2s;
    }

        .nav-link:hover {
            background-color: #e0e7ff;
        }

        .nav-link .active {
            background-color: #818cf8;
            color: white;
            font-weight: 500;
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
        }

    .nav-footer {
        margin-top: auto;
        padding: 1rem 0;
    }

    .logout {
        color: #ef4444;
    }

        .logout:hover {
            background-color: #fee2e2;
        }
</style>

@code {
    private string CurrentUri => NavigationManager.Uri;



    [Inject]

    private NavigationManager NavigationManager { get; set; }



    private bool IsActive(string path)

    {

        var relativePath = NavigationManager.ToBaseRelativePath(CurrentUri).ToLower();

        return relativePath == path.ToLower();

    }
}