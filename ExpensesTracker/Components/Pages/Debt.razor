@page "/debt"
@using ExpensesTracker.Services
@inject DebtService debtService
@inject NavigationManager NavigationManager
@inject AuthenticationStateService authStateService

<h1 class="debts-title">Debts</h1>

@if (debts == null || debts.Count == 0)
{
    <div class="table-container">
        <table class="debts-table no-data-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="no-data-message">No debts found. Start by adding a new debt!</td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    <div class="table-container">
        <table class="debts-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var debt in debts)
                {
                    <tr>
                        <td>@debt.Title</td>
                        <td>@debt.Amount</td>
                        <td>@debt.Category</td>
                        <td>
                            <button class="details-button" @onclick="() => ShowDetails(debt)">Detail</button>
                            <button class="clear-button" @onclick="() => ClearDebt(debt)">Clear</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (selectedDebt != null)
    {
        <div class="debt-details">
            <h3>Debt Details</h3>
            <p><strong>Title:</strong> @selectedDebt.Title</p>
            <p><strong>Amount:</strong> @selectedDebt.Amount</p>
            <p><strong>Category:</strong> @selectedDebt.Category</p>
            <p><strong>Source:</strong> @selectedDebt.Source</p>
            <p><strong>Remarks:</strong> @selectedDebt.Remarks</p>
            <p><strong>Date:</strong> @selectedDebt.Date.ToShortDateString()</p>
            <p><strong>Due Date:</strong> @selectedDebt.DueDate.ToShortDateString()</p>
        </div>
    }
}

<button class="add-debt-button" @onclick="NavigateToAddDebt">Add New</button>

<style>
    /* Title Styling */
    .debts-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        color: #333;
        margin-bottom: 2rem;
    }

    /* Table Styling */
    .table-container {
        overflow-x: auto;
        margin: 0 auto;
        max-width: 90%;
    }

    .debts-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }

        .debts-table th,
        .debts-table td {
            text-align: left;
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #ddd;
        }

        .debts-table th {
            background-color: #6c63ff;
            color: white;
            text-transform: uppercase;
            font-weight: bold;
        }

        .debts-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .debts-table tr:hover {
            background-color: #f1f1f1;
        }

    /* No Data Styling */
    .no-data-table {
        margin-top: 2rem;
    }

    .no-data-message {
        text-align: center;
        font-size: 1.2rem;
        color: #888;
        padding: 2rem;
        background-color: #fdfdfd;
        font-style: italic;
    }

    /* Details Section */
    .debt-details {
        margin: 2rem auto;
        padding: 1rem 1.5rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        max-width: 80%;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .debt-details h3 {
            color: #6c63ff;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

    /* Button Styles */
    .add-debt-button {
        background-color: #6c63ff;
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        display: block;
        margin: 1rem auto;
        max-width: 150px;
        text-align: center;
    }

        .add-debt-button:hover {
            background-color: #544bfd;
        }

    .details-button {
        background-color: #6c63ff;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

        .details-button:hover {
            background-color: #544bfd;
        }

    .clear-button {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

        .clear-button:hover {
            background-color: #e53935;
        }
</style>


@code {
    private List<DebtItems> debts;
    private DebtItems selectedDebt;
    private string currentUserEmail;

    protected override async Task OnInitializedAsync()
    {
        currentUserEmail = await authStateService.GetAuthenticatedUserEmailAsync();
        if (!string.IsNullOrEmpty(currentUserEmail))
        {
            debts = debtService.LoadDebts(currentUserEmail);
        }
        else
        {
            NavigationManager.NavigateTo("/login");
        }
    }

    private void ShowDetails(DebtItems debt)
    {
        selectedDebt = debt;
    }

    private void ClearDebt(DebtItems debt)
    {
        debtService.RemoveDebt(currentUserEmail, debt);
        debts = debtService.LoadDebts(currentUserEmail); // Reload the updated list
        selectedDebt = null; // Clear the selected debt
    }

    private void NavigateToAddDebt()
    {
        NavigationManager.NavigateTo("/add-debt");
    }
}
