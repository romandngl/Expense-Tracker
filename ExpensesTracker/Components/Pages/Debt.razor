@page "/debt"
@inject DebtService debtService
@inject NavigationManager NavigationManager

<h1 class="debts-title">Debts</h1>

@if (debts == null || debts.Count == 0)
{
    <p class="no-debts-message">No debts found. Add a new debt.</p>
}
else
{
    <div class="table-container">
        <table class="debts-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var debt in debts)
                {
                    <tr>
                        <td>@debt.Title</td>
                        <td>@debt.Amount</td>
                        <td>@debt.Category</td>
                        <td>
                            <button class="details-button" @onclick="() => ShowDetails(debt)">Detail</button>
                            <button class="clear-button" @onclick="() => ClearDebt(debt)">Clear</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (selectedDebt != null)
    {
        <div class="debt-details">
            <h3>Debt Details</h3>
            <p><strong>Title:</strong> @selectedDebt.Title</p>
            <p><strong>Amount:</strong> @selectedDebt.Amount</p>
            <p><strong>Category:</strong> @selectedDebt.Category</p>
            <p><strong>Source:</strong> @selectedDebt.Source</p>
            <p><strong>Remarks:</strong> @selectedDebt.Remarks</p>
            <p><strong>Date:</strong> @selectedDebt.Date.ToShortDateString()</p>
            <p><strong>Due Date:</strong> @selectedDebt.DueDate.ToShortDateString()</p>
        </div>
    }
}

<button class="add-debt-button" @onclick="NavigateToAddDebt">Add New</button>

<style>
    /* Title styling */
    .debts-title {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Message for no debts */
    .no-debts-message {
        font-size: 1.2rem;
        color: #6c63ff;
        text-align: center;
    }

    /* Table styling */
    .table-container {
        overflow-x: auto;
        margin: 0 auto;
        max-width: 80%;
    }

    .debts-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .debts-table th,
        .debts-table td {
            text-align: left;
            padding: 0.8rem;
            border: 1px solid #e0e0e0;
        }

        .debts-table th {
            background-color: #6c63ff;
            color: #fff;
            font-weight: bold;
        }

        .debts-table tbody tr:hover {
            background-color: #f9f9f9;
        }

    /* Details section */
    .debt-details {
        margin: 2rem auto;
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
        max-width: 80%;
    }

        .debt-details h3 {
            color: #6c63ff;
            margin-bottom: 1rem;
        }

    /* Button styles */
    .add-debt-button {
        background-color: #6c63ff;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
        display: block;
        margin: 1rem auto;
        max-width: 150px;
        text-align: center;
    }

        .add-debt-button:hover {
            background-color: #5846e8;
        }

    .details-button {
        background-color: #6c63ff;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .details-button:hover {
            background-color: #5846e8;
        }

    .clear-button {
        background-color: #ff6c6c;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .clear-button:hover {
            background-color: #e85454;
        }
</style>

@code {
    private List<DebtItems> debts;
    private DebtItems selectedDebt;

    protected override void OnInitialized()
    {
        debts = debtService.LoadDebts();
    }

    private void ShowDetails(DebtItems debt)
    {
        selectedDebt = debt;
    }

    private void ClearDebt(DebtItems debt)
    {
        debtService.RemoveDebt(debt);
        debts = debtService.LoadDebts(); // Reload the updated list
        selectedDebt = null; // Clear the selected debt
    }

    private void NavigateToAddDebt()
    {
        NavigationManager.NavigateTo("/add-debt");
    }
}
